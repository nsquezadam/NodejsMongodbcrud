<div class="container">
  <div class="row">
    <div class="col-md-5" offset-md-3>
      <div class="card card-body bg-dark p-4 text-white rounded-0">
        <h1>Actualiza una tarea</h1>
        <form action="/tasks/{{task._id}}/edit" method="post">
          <div class="mb-3">
            <input
              type="text"
              name="title"
              placeholder="Title"
              value="{{task.title}}"
              class="form-control rounded-0 bg-dark text-white"
            />
          </div>
          <div class="mb-3">
            <textarea
              name="description"
              placeholder="Add description"
              class="form-control rounded-0 bg-dark text-white"
            >{{task.description}} </textarea>
          </div>

          <button class="btn btn-primary btn-sm mt-2">update</button>
        </form>

      </div>

    </div>
  </div>
</div>